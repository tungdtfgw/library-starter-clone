# Database - Supabase PostgreSQL
# Get connection strings from Supabase: Project Settings > Database
DATABASE_URL="postgresql://postgres.xxx:[YOUR-PASSWORD]@aws-1-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (used for Prisma migrations)
DIRECT_URL="postgresql://postgres.xxx:[YOUR-PASSWORD]@aws-1-ap-southeast-1.pooler.supabase.com:5432/postgres"

